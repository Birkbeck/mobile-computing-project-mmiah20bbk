<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true"
    android:id="@+id/scrollView"
    tools:context=".fragments.RecipeDetailFragment">

    <LinearLayout
        android:id="@+id/recipeDetailLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:padding="10dp">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/baseline_arrow_back_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Recipe Details"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:textSize="22sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <!-- Recipe Image -->
        <ImageView
            android:id="@+id/recipeImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitCenter"
            android:src="@drawable/cake" />

        <!-- Recipe Title -->
        <TextView
            android:id="@+id/recipeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chorizo &amp; mozzarella gnocchi bake"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <!-- Category -->
        <TextView
            android:id="@+id/recipeCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category: Cake"
            android:textColor="#888888"
            android:layout_marginTop="4dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/recipeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A rich and moist chocolate cake topped with creamy chocolate ganache."
            android:layout_marginTop="8dp"
            android:textSize="16sp" />

        <!-- Ingredients Title -->
        <TextView
            android:id="@+id/ingredientsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredients"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <!-- Ingredients List -->
        <TextView
            android:id="@+id/ingredientsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 2 cups all-purpose flour\n• 1¾ cups sugar\n• ¾ cup cocoa powder\n• 1½ tsp baking powder\n• 1½ tsp baking soda\n• 2 eggs\n• 1 cup milk\n• ½ cup oil\n• 1 cup boiling water"
            android:layout_marginTop="4dp"
            android:textSize="16sp" />

        <!-- Instructions Title -->
        <TextView
            android:id="@+id/instructionsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Instructions"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <!-- Instructions List -->
        <TextView
            android:id="@+id/instructionsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Preheat oven to 350°F (175°C).\n2. Mix dry ingredients.\n3. Add eggs, milk, oil, and vanilla.\n4. Stir in boiling water.\n5. Pour into pans and bake.\n6. Let cool before frosting."
            android:layout_marginTop="4dp"
            android:textSize="16sp" />

        <!-- Time and Servings -->
        <TextView
            android:id="@+id/timeServings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⏱️ 45 mins    |    🍽️ Serves 8"
            android:textStyle="italic"
            android:layout_marginTop="12dp"
            android:textColor="#666666"
            android:textSize="14sp" />

    </LinearLayout>

</ScrollView>